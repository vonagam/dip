#diplomacy_map
  background-color hsl(0, 0%, 50%)

  > g >
    .s, .l, .w
      stroke hsl(0, 0%, 25%)

    .l
      fill hsl(50, 30%, 70%)
    .w 
      fill hsl(210, 30%, 70%)
    .s 
      fill hsl(0, 0%, 50%)

    .center
      fill hsl(0, 0%, 25%)
    .unit
      stroke-width 2

    text 
      font-family Arial,Helvetica,sans-serif
      font-size 8px
      display none

  > #Orders > #Orders_new 
    > line, > path
      stroke-width 2

    > .move, > .convoy
      marker-end url(#move_marker)

    > circle.convoy
      fill none !important
      stroke-width 2
      stroke-dasharray 5,2

    > .support
      marker-end url(#support_marker)
      fill none !important
      stroke-dasharray 3,2
