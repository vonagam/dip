#diplomacy_map > [order_force_select]
  &:hover
    cur pnt

    >
      .l
        fill hsl( 50, 30%, 65%)
      .w
        fill hsl(210, 30%, 65%)
      .force
        fill white !important


  $z = length($countries)
  for $i in (0..$z)
    $country = $countries[$i]
    $color = $i * 51

    &.{$country}:hover > .l
      fill hsl( $color, 60%, 55% )
