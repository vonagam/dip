@import 'views/application/root/forms'
@import 'views/application/root/new_game'
@import 'views/application/root/login'
@import 'views/application/root/games'

#application_root_layout
  wid min 970

  > #main
    box brd
    pad 20

    > #background
      pos fix
      bac img url('/images/home_guard_parade.jpg') siz cvr pos cen
      dis blo

      > .grey
        bac clr hsla(0,0,100,0.2)

#application_root
  txt ali cen

  > .col
    + .col
      mar l 20

    &.left
      wid 610

    &.right 
      wid 300

    > .container
      pos rel
      
      &.disabled
        dis non

      &.enabled
        dis blo

      .cave, .fields
        hei 0
        ovr hid
        opa 0
        tra opacity 0.5s

      > .closer
        dis non

      > .button.sezam
        transition color 0.5s, background-color 0.5s

      &.opened
        .cave, .fields
          hei aut
          ovr vis
          opa 1

        > .closer
          dis blo

        > .button.sezam
          txt clr black sha non
          bac clr tra
          cur def
