@import 'views/application/root/new_game'
@import 'views/application/root/login'
@import 'views/application/root/games'

#application_root
  txt ali cen

  > .container
    pos rel
    
    &.disabled
      dis non

    &.enabled
      dis blo

    .cave, .fields
      hei 0
      ovr hid
      opa 0
      tra opacity 0.5s

    > .closer
      dis non

    > .button.sezam
      transition color 0.5s, background-color 0.5s

    &.opened
      .cave, .fields
        hei aut
        ovr ini
        opa 1

      > .closer
        dis blo

      > .button.sezam
        txt clr black sha non
        bac clr tra
        cur def
