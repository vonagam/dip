#application_root 
  .games
    > .filters > .td
      wid (1/6)*100%
    
    > .table
      
      .tr
        pad 5

        > div
          mar x 5
          wid 25

        > .name
          wid 180
        > .created_at
          wid 80
      
      > .tbody

        > .game
          dis blo
          txt siz 15 hei 1.7em

          &:hover
            bac clr hsl(0,0,92)
          &:active
            bac clr hsl(0,0,85)

          > .status
            brd rds 50%
            txt siz 14 clr white sha 0 1 2 hsla(0,0,0,0.5)
            &.waiting
              txt siz 0
              bac clr hsl(120, 50, 50)
            &.going
              bac clr hsl( 40, 80, 50)
            &.finished
              bac clr hsl(  0, 50, 50)

        > .not_matching
          dis non
