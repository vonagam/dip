#games_show
  .history.component
    > .input
      dis blo
      pad y 0
      hei 30 min 30

    > .controls
      dis blo
      txt hei 26

      > .control
        hei 26
        wid 25%
        txt ali cen
        cur pnt

        &.hidden
          vis hid

        &:hover
          bac clr hsl(0,0,90)
        &:active
          bac clr hsl(0,0,80)

        > .press
          dis inl-blo
          ver mid
          wid 18
          hei 18
          bac img url('/play.png')

        &.all > .press
            bac pos -18 0

        &.back > .press
            transform scaleX(-1)
