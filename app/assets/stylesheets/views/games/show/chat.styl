.chat
  > .window
    bac clr white
    overflow-y scroll
    resize vertical
    brd ($u*2) hsl(0,0,85)

    > .message
      pos rel
      txt siz $u*14
      pad 0.3em 0.6em

      + .message
        brd t 1 hsl(0,0,90)

      > .when, > .who, > .what
        dis inl

      > .when
        txt clr hsl(0,0,70) siz 10

  #message_text
    txt hei inh siz $u*14
    hei min 3.6em
    brd ($u*2*16/14)
