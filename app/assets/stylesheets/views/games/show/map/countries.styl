$countries = Austria Turkey Germany Italy France England Russia 
$z = length($countries)
for $i in (0...$z)
  $country = $countries[$i]
  $color = $i * 51

  #diplomacy_map 
    > #regions 
      > g > .unit[data-power={'"'+$country+'"'}]
        fill hsl( $color, 90%, 40% )
        stroke hsl( $color, 100%, 20% )

      > [data-power={'"'+$country+'"'}] > .l
        fill hsl( $color, 60%, 60% )

    > #orders > .{$country}
      stroke hsl( $color, 100%, 20% )

  .stats .{$country} .power,
  .chat .message .{$country}
      txt clr hsl( $color, 100, 38 )

