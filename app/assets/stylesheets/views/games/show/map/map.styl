#diplomacy_map
  background-color hsl(0, 0%, 50%)

  > #regions > g >
    .s, .l, .w
      stroke hsl(0, 0%, 25%)

    .l, .w
      transition fill 0.2s ease-out

    .l
      fill hsl(50, 30%, 70%)
    .w 
      fill hsl(210, 30%, 70%)
    .s 
      fill hsl(0, 0%, 50%)

    .embattled
      fill black
      stroke none
    .center
      fill hsl(0, 0%, 15%)
    .unit
      stroke-width 2

      &.dislodged
        stroke white !important

    text 
      font-family Arial,Helvetica,sans-serif
      font-size 8px

  > #orders
    > line, > path
      stroke-width 2

    > .Move, > .Retreat
      marker-end url(#move_marker)

    > .Convoy
      fill none !important
      stroke-width 2
      stroke-dasharray 5,2

    > .Support
      marker-end url(#support_marker)
      fill none !important
      stroke-dasharray 3,2
    
    > .Disband
      stroke black
      stroke-width 3

    > .Build
      fill none
      stroke white
      stroke-width 2

    > .SUCCESS
      stroke black !important

    > .FAILURE
      stroke white !important
