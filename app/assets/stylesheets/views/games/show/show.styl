#games_show_layout
  wid min 970

#games_show
  dis blo

  .component.disabled
    dis non '!'

  > .menu
    hei 66
    pad y 10
    txt hei 46

    .component
      dis inl-blo
      ver t
      > .button
        hei 46
        wid 110
        pad 0
        > .fa
          txt siz 23 hei 46

    > .left
      > .component
        mar r 10

    > .right
      pos abs t 10 r 10

      > .component
        mar l 10

  > .pils2
    pos rel

    > .resizer
      pos abs t 0
      hei 100%
      wid 20
      dis inl-blo
      cur ew-resize

    > .left

      > .map_container
        pos rel

        &.hide_abbrs .abbr
          dis non

        > .keep_ratio
          pos rel

          &:after
            pad t 91.8032787%
            dis blo
            con ''

          > #diplomacy_map
            pos abs t 0 l 0
            wid 100%
            hei 100%

        > .abbrs
          pos abs b 0 l 0 z 2
          txt ali cen
          mar 0
          cur pnt
          txt clr black
          sha non

          &.hidden
            txt clr hsl(0,0,60)

    > .right
      mar l 20


